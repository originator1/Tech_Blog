<div class='comments-container'>
    <h2>
      Post new comment to this project!
    </h2>
    <form class='new-comment-form'>
      <label for='comment_title'>
        Comment Title:
      </label>
      <br />
      <textarea id='comment_title' name='comment_title' rows='2' cols='30'>
        {{comment.title}}
      </textarea>
      <br />
      <label for='description'>
        Description:
      </label>
      <br />
      <textarea id='description' name='description' rows='5' cols='30'>
        {{comment.description}}
      </textarea>
      
      <br />
      <br />
     
      
      <button type='submit' value='Submit'>
        Submit
      </button>
    </form>
  </div>